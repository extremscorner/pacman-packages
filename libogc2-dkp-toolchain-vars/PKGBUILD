pkgname=libogc2-dkp-toolchain-vars
pkgver=20251221
pkgrel=1
pkgdesc='Helper scripts to set variables for devkitPro toolchains.'
arch=('any')
url='https://github.com/extremscorner/libogc2'
depends=('devkitppc-cmake' 'dkp-toolchain-vars' 'libogc2-cmake' 'libogc2-pkg-config' 'ppc-pkg-config')
source=('gamecubevars.sh'
		'ppcvars.sh'
		'wiivars.sh')
sha256sums=('9eac2de13bc2b591fd44340960466867d2fcd3add439d8730f289d7d4c0826a2'
			'4e9f1c6c210897575d6d36bf50830f0d42d11c87b9bf53c2f4a7ccf94ce19df5'
			'7280e2c97ef9b3cb15f6bd895034b69994356dc0ae4c5ade7e1e069c90aa9a16')

package() {
	install -Dm 644 *vars.sh -t "${pkgdir}${DEVKITPRO}/libogc2"
}
