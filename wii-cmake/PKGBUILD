# Maintainer: Extrems <extrems@extremscorner.org>
# Contributor: WinterMute <davem@devkitpro.org>

pkgname=wii-cmake
pkgver=1.0.1
pkgrel=2
pkgdesc='CMake support for Nintendo Wii.'
arch=('any')
url='https://github.com/extremscorner/libogc2'
groups=('wii-dev')
depends=('ogc-cmake' 'wii-pkg-config')
source=('Wii.cmake'
		'NintendoWii.cmake'
		'powerpc-eabi-cmake')
sha256sums=('f9b17b4f5c3be859e5f9b6fa459049fbffbe7ea8c0a42a923de6323e3b797b02'
			'e7b633ac937e2b790b948de11877c09c7f1c0d4d2531a2adfb418b8753e81e85'
			'77d6d154c3476da05c91ed00b76aee801b676eec2107455c433ddbc18f63cf00')

package() {
	install -Dm 644 Wii.cmake -t "${pkgdir}${DEVKITPRO}/cmake"
	install -Dm 644 NintendoWii.cmake -t "${pkgdir}${DEVKITPRO}/cmake/Platform"
	install -Dm 755 powerpc-eabi-cmake -t "${pkgdir}${DEVKITPRO}/portlibs/wii/bin"
}
